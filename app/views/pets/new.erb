<h1>Create a new Pet</h1>

<form action="/pets" method="post">
  <label for="name">Name: </label>
  <input type="text" name="pet[name]" id="pet_name" placeholder="name">

  <br>

  <label>Who is your owner?</label>

  <br>

  <% @owners.each do |owner| %>
    <input type="checkbox" name="pet[owner_id]" value="<%= owner.id %>" id="<%= owner.id %>"><%= owner.name %>
  <% end %>

  <br>
  <p>or, create a new owner:</p>
  <label>Owner's name:</label>
  <br>
  <input type="text" name="owner[name]" id="owner_name">
  <input type="submit" value="Create Pet">
</form>
